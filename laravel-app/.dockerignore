# =============================================================================
# Docker Ignore File for Laravel
# Excludes unnecessary files from the Docker build context
# =============================================================================

# Git
.git
.gitignore
.gitattributes

# IDE and Editor files
.idea
.vscode
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# Documentation
*.md
!README.md
docs/
CHANGELOG*
LICENSE*

# Development files
.env
.env.*
!.env.example
.editorconfig
.styleci.yml
.php-cs-fixer.cache
phpcs.xml
phpstan.neon
phpunit.xml
pint.json

# Node modules (built in Docker)
node_modules/

# Vendor directory (installed in Docker)
vendor/

# Test files
tests/
.phpunit.result.cache
.phpunit.cache/
coverage/

# Build artifacts
.npm/
.cache/

# Laravel specific
storage/logs/*
storage/framework/cache/*
storage/framework/sessions/*
storage/framework/views/*
storage/app/public/*
!storage/logs/.gitignore
!storage/framework/cache/.gitignore
!storage/framework/sessions/.gitignore
!storage/framework/views/.gitignore
!storage/app/public/.gitignore

# Docker files (not needed in context after initial copy)
docker-compose*.yml
docker-compose*.yaml
Dockerfile.dev

# CI/CD
.github/
.gitlab-ci.yml
.travis.yml
Jenkinsfile
bitbucket-pipelines.yml

# Misc
*.log
*.bak
*.backup
npm-debug.log*
yarn-debug.log*
yarn-error.log*
